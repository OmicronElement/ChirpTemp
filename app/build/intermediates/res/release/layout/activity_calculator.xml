<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.bwisni.chirptemp.CalculatorActivity"
    android:id="@+id/CalculatorActivityLayout">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/calcButton"
        android:layout_width="@dimen/smallButtonWidth"
        android:layout_height="wrap_content"
        android:text="@string/calc"
        android:layout_below="@+id/secondsInput"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/chirpsInput"
        android:layout_alignTop="@+id/chirps"
        android:layout_alignLeft="@+id/calcButton"
        android:layout_alignStart="@+id/calcButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/secondsInput"
        android:layout_below="@+id/chirpsInput"
        android:layout_alignLeft="@+id/chirpsInput"
        android:layout_alignStart="@+id/chirpsInput" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Seconds"
        android:id="@+id/seconds"
        android:layout_alignBottom="@+id/secondsInput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/chirps"
        android:id="@+id/chirps"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
